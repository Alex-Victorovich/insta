<h1 class="text-danger fw-bold">Моя страница</h1> 
<div >
	<img class="rounded-circle" style="width:100px" src="https://f.bh-rp.ru/data/avatars/o/64/64052.jpg?1611244217" alt="avatar">
</div>




<div class="d-flex justify-content-center">
	<form class="d-flex flex-column align-items-center" action="/addressbook" method="POST" >
		<div class="mb-3">
			<input class="form-control" name="name"  placeholder="ссылка на картинки">
		</div>
		
		<button type="submit" class="btn btn-primary rounded-pill">Отправить</button>
	</form>
</div>

<hr class="border border-danger"/>

<section class="d-flex justify-content-center row">
	{{#each listOfPhoto}}
		<div class="card my-2 mx-2 bg-light col-sm-6" style="width: 550px", >
			<div class="card-body d-flex justify-content-center">
				<img class="img-fluid" src="{{this.name}}" width="500px" alt="картинка">
				
			</div>
		</div>
	{{/each}}
</section>




